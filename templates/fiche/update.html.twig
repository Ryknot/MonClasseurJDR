                    </div>
                    {{ form_end(champForm) }}
                </div>
            </div>
        </div>

        {# ressource #}
        <div class="row m-3">
            <div class="card-content p-2 m-2 cardTypeInfo">
                <h2 class="text-center">Ajout ressource:</h2>
            </div>
            <div class="card-content p-2 m-2 cardTypeInfo row">
                {{ form_start(ressourceForm) }}
                <div class="row">
                    <div class="col pt-3 m-2 text-center cardChamp">
                        {{ form_row(ressourceForm.label) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col pt-3 m-2 text-center cardChamp">
                        {{ form_row(ressourceForm.rangeMax) }}
                    </div>
                </div>
                 <div class="row">
                    <div id="btnFiche" class=" col p-2 m-2 cardChamp content-center">
                        <button type="submit" class="btn btn-lg button" name="boutonFiche" value="valider">Valider</button></a>
                        <button type="submit" class="btn btn-lg button" name="boutonFiche" value="update">Ajouter</button>
                        <a href="{{ path('fiche_detail', {'id':fiche.id}) }}"><button type="button" class="btn btn-lg button " name="boutonFiche" value="retour">Retour</button></a>
                    </div>
                    {{ form_end(ressourceForm) }}
                </div>
            </div>
        </div>

    </div>

    <div class="card text-center p-4 cardFiche">
        <div class="card mb-2 cardTitle">
            <h2 class="text-center"> FICHE PERSONNAGE: <span class="pseudoFiche">{{ fiche.pseudo }}</span></h2>
        </div>
        <div class="card mb-2 p-2 cardTypeInfo content-center">
                <h3> Ressources:</h3>
                <div class="row container">
                    {% set count = 0 %}
                    {% for ressource in ressources %}
                        {% set count = count + 1 %}
                        <div class="card mb-2 col-4 cardChamp">
                            <span class="labelChamps">
                                <span class="cliquableRessource" data-Ressource="{{ ressource.id }}">{{ ressource.label }}: </span>
                                <span class="colorValue{{ count }}">
                                    <span class="refreshValue{{ count }}">{{ ressource.valeurGlissante }}</span> / <span class="modifiableRangeMax" data-Page="update" data-RangeMax="{{ ressource.rangeMax }}" data-id="{{ ressource.id }}">{{ ressource.rangeMax }}</span>
                                </span>
                            </span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        <div class="card mb-2 p-2 cardTypeInfo content-center">
            <h3> Identité:</h3>
            <div class="row container">
                {% set count = 0 %}
                {% for champ in champs %}
                    {% set count = count + 1 %}
                    {% if champ.typeInfo.label == 'identité'%}
                            <div class="card mb-2 col-4  cardChamp ">
                                <div class="champFiche">
                                    <span class="buttonPrevious" data-Champ="{{ champ.id }}" data-sort="{{ champ.sort }}" style="{{ champ.sort==0?'display:none' }}"> < </span>
                                    <div class="champZoneInfo col-10">
                                        <span class="labelChamps cliquableChamp" data-Champ="{{ champ.id }}"> {{ champ.label }}</span>
                                        <span class="modifiable" id="champ{{ count }}" data-Count="{{ count }}" data-Page="update" data-Champ="{{ champ.id }}" data-ValeurTexte="{{ champ.valeurTexte }}" data-ValeurArea="{{ champ.valeurArea }}">{{ champ.valeurArea != null ? champ.valeurArea : champ.valeurTexte }}</span>
                                    </div>
                                    <span class="buttonNext" data-Champ="{{ champ.id }}" data-sort="{{ champ.sort }}" style="{{champ.sort == (champs|length)-1?'display:none' }}"> > </span>
                                </div>
