                    <div class="col pt-3 m-2 text-center cardChamp">
                        {{ form_row(champForm.typeInfo) }}
                    </div>
                    <div class="col pt-3 m-2 text-center cardChamp" id="typeChamp">
                        {{ form_row(champForm.typeChamp) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col pt-3 m-2 text-center cardChamp">
                        {{ form_row(champForm.label) }}
                    </div>
                    <div class="col pt-3 m-2 text-center cardChamp" id="champTexte">
                        {{ form_row(champForm.valeurTexte) }}
                    </div>
                    <div class="col pt-3 m-2 text-center cardChamp" id="champArea">
                        {{ form_row(champForm.valeurArea) }}
                    </div>
                </div>
