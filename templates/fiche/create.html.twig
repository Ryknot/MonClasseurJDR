{% extends 'base.html.twig' %}

{% block body %}
    {% if app.user.id == user.id or is_granted("ROLE_ADMIN")%}
        <div class="card mb-2 col-8 cardFiche" id="formFiche">
            <div class="col">
                <div class="col card-content p-2 m-2 cardTitle">
                    <h2 class="text-center">Cr√©ation fiche perso</h2>
                </div>
                <div class="col p-2 m-2 alert alert-info" role="alert">Choississez le nom de votre personnage et une image (optionnel).</div>
                <div class="col card-content p-2 m-2 cardTypeInfo">
                    {{ form_start(ficheForm) }}
                    <div class="">
                        <div class="p-2 m-2 text-center cardChamp">
                            {{ form_row(ficheForm.pseudo) }}
                        </div>
                        <div class="p-2 m-2 text-center cardChamp">
                            {{ form_row(ficheForm.image) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col newFiche">
                            <button type="submit" class="btn btn-sm button" name="boutonFiche">Valider</button>
                        </div>
                        <div class="col newFiche">
                            <a href="{{ path('fiche_list', {'id':user.id}) }}"><button type="button" class="btn btn-sm button " name="boutonFiche" value="retour">Retour</button></a>
                        </div>
                    </div>
                    {{ form_end(ficheForm) }}
                </div>
            </div>
        </div>
    {% else %}
        <h3 class="text-nowrap"> Informations non disponibles </h3>
    {% endif %}

{% endblock %}

{% block title %}
    {{ user.pseudo }} | Creation fiche | {{ parent() }}
{% endblock %}

{% block script %}

{% endblock %}

