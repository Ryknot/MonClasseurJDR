{% extends 'base.html.twig' %}

{% block body %}
    <div class="card mb-2 col-6 cardFiche" id="formFiche">
        <div class="col">
            <div class="col card-content p-2 m-2 cardTitle">
                <h2 class="text-center">Modification fiche perso</h2>
            </div>
            <div class="col card-content p-2 m-2 cardTypeInfo">

                {{ form_start(ficheForm) }}
                <div class="">
                    <div class="p-1 m-2 mb-4 text-center cardChamp">
                        {{ form_row(ficheForm.pseudo) }}
                    </div>
                    <div class="p-1 m-2 text-center cardChamp">
                        {{ form_row(ficheForm.image) }}
                    </div>
                </div>
                <div class="newFiche">
                    <button type="submit" class="btn btn-sm button" name="boutonFiche">Valider</button>
                    <a href="{{ path('fiche_detail', {'id':fiche.id}) }}"><button type="button" class="btn btn-sm button " name="boutonFiche" value="retour">Retour</button></a>
                </div>
                {{ form_end(ficheForm) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block title %}
    {{ user.pseudo }} | Modification infos fiche | {{ parent() }}
{% endblock %}

{% block script %}

{% endblock %}

