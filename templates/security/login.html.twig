{% extends 'base.html.twig' %}

{% block title %}Connexion | {{ parent() }}{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="col p-2 m-2 alert alert-info text-start" role="alert">
            Vous êtes déjà connecté en tant que {{ app.user.pseudo }}<br/>
            <a href="{{ path('app_logout') }}">Se déconnecter ?</a>
        </div>
    {% else %}
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">Erreur dans l'email ou le mot de passe.</div>
            {% endif %}

            <div class="cardFiche col-12 m-5 p-5">
                <h1 class="h3 mb-3 font-weight-normal cardTypeInfo text-center p-1">Connexion</h1>
                <div class="cardTypeInfo p-1 mb-2">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    {#    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3 cardChamp p-2 pb-1">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                    #}

                    <button class="btn btn-lg button text-nowrap" type="submit">
                        Se connecter
                    </button>
                </div>
            </div>

        </form>
    {% endif %}
{% endblock %}
